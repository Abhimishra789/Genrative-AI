        "stop_words = set(stop_words.words('english'))\n",
        "\n",
        "def preprocess_text(text):\n",
        "    text = text.lower()\n",
        "    text = re.sub(r'[^\\w\\s]', '', text)\n",
        "    words = text.split()\n",
        "    words = [word for word in words if word not in stop_words]\n",
        "    return ' '.join(words)\n",
        "\n",
        "df['cleaned_review'] = df['review'].apply(preprocess_text)\n",
        "\n",
        "print(df['review'], df['cleaned_review'])\n",
        "\n",
        "unique_words = set(\" \".join(df['cleaned_review']).split())\n",
        "unique_words = list(unique_words)\n",
        "\n",
        "print(\"Vocabulary:\", unique_words)\n",
        "\n",
        "def one_hot_encode(sentence, vocab):\n",
        "    sentence_words = sentence.split()\n",
        "    return [1 if word in sentence_words else 0 for word in vocab]\n",
        "\n",
        "one_hot_vectors = df['cleaned_review'].apply(lambda x: one_hot_encode(x, unique_words))\n",
        "\n",
        "print(\"One Hot Encoded Vector for first review:\")\n",
        "print(one_hot_vectors.iloc[0])\n",
        "\n",
        "vectorizer = CountVectorizer()\n",
        "x_bow = vectorizer.fit_transform(df['cleaned_review'])\n",
        "\n",
        "print(\"BoW Feature Names:\")\n",
        "print(vectorizer.get_feature_names_out())\n",
        "\n",
        "print(\"BoW Matrix:\")\n",
        "print(x_bow.toarray())\n"

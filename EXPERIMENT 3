      "source": [
        "# Step 1: Import Required Libraries\n",
        "import nltk\n",
        "nltk.download('punkt')\n",
        "\n",
        "from nltk.tokenize import word_tokenize\n",
        "from nltk.stem import PorterStemmer, LancasterStemmer, SnowballStemmer\n",
        "\n",
        "\n",
        "# Step 2: Define Job Description and User Query Text\n",
        "job_text = \"\"\"\n",
        "Developers are developing scalable software systems.\n",
        "A developer is responsible for application development.\n",
        "\"\"\"\n",
        "\n",
        "\n",
        "# Step 3: Convert Text to Lowercase\n",
        "job_text = job_text.lower()\n",
        "\n",
        "\n",
        "# Step 4: Tokenize the Text\n",
        "tokens = word_tokenize(job_text)\n",
        "print(\"Tokens:\")\n",
        "print(tokens)\n",
        "\n",
        "\n",
        "# Step 5: Initialize Stemming Algorithms\n",
        "porter = PorterStemmer()\n",
        "lancaster = LancasterStemmer()\n",
        "snowball = SnowballStemmer(\"english\")\n",
        "\n",
        "\n",
        "# Step 6: Apply Stemming on Tokens\n",
        "porter_stem = [porter.stem(word) for word in tokens]\n",
        "lancaster_stem = [lancaster.stem(word) for word in tokens]\n",
        "snowball_stem = [snowball.stem(word) for word in tokens]\n",
        "\n",
        "\n",
        "# Step 7: Display and Compare Results\n",
        "print(\"\\nPorter Stemmer Output:\")\n",
        "print(porter_stem)\n",
        "\n",
        "print(\"\\nLancaster Stemmer Output:\")\n",
        "print(lancaster_stem)\n",
        "\n",
        "print(\"\\nSnowball Stemmer Output:\")\n",
        "print(snowball_stem)\n",
        "\n",
        "\n",
        "# Step 8: Conclusion\n",
        "print(\"\\nConclusion:\")\n",
        "print(\"Stemming normalizes text by reducing words to their root form,\")\n",
        "print(\"improving matching between job descriptions and user queries.\")"
      ]
    }
